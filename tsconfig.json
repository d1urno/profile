{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "types": ["node"],
    // Needed for TypeScript intellisense in the template inside Vue files
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
