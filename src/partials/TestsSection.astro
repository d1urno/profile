---
import useTranslations from '@/functions/useTranslations'
import { getLocale } from 'astro-i18n-aut'
import { Icon } from 'astro-icon/components'
import TestItem from '@/components/TestItem.astro'

const locale = getLocale(Astro.url)
const { t } = await useTranslations(locale)

const tests = [
  {
    period: '2025',
    title: 'Trace CDR static demo',
    deployLink: 'https://preview.tracecdr-demo.pages.dev/',
    text: 'Stack: React 19 - TypeScript - TailwindCSS - d3.js - Tanstack Query'
  },
  {
    period: '2020',
    title: 'Dog & Pony Studios frontend test',
    deployLink: 'https://dps-senior-frontend-test.netlify.app',
    text: 'Stack: Nuxt - TailwindCSS - Jest'
  },
  {
    period: '2020',
    title: 'Doc88 frontend challenge',
    deployLink: 'https://doc88-frontend-challenge.netlify.app',
    text: 'Stack: Vue 2.6 - TypeScript - TailwindCSS - Jest'
  }
]
---

<section class="print:mt-10" style="page-break-after: always">
  <div class="mb-8 ml-auto flex items-center text-2xl uppercase">
    <h1 class="ml-auto text-teal-700 dark:text-white">{t('TestsSection.title')}</h1>
    <Icon name="computer" class="ml-2 h-12 w-12 text-teal-500 dark:text-teal-500" />
  </div>
  <hr
    class="my-4 box-border border border-gray-500 bg-gray-500 opacity-75 lg:-mx-6 dark:border-gray-500 dark:bg-gray-300"
  />
  {tests.map((test) => <TestItem test={test} />)}
</section>
