---
export interface Experience {
  period: string
  title: string
  link: string
  component: string
}

const { experience } = Astro.props as { experience: Experience }
---

<article>
  <span class="text-sm dark:text-gray-400">{experience.period}</span>
  <h3 class="text-2xl font-bold opacity-75 dark:text-white dark:opacity-100">
    {experience.title}
  </h3>
  <a
    class="font-semibold"
    rel="noopener nofollow"
    href={experience.link}
    data-text={experience.link}
    target="_blank"
  >
    {experience.link}
  </a>
  <section class="text-opacity-75 mb-8 text-gray-900 dark:text-gray-400">
    <slot />
  </section>
</article>
